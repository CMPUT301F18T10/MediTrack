<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meditrack">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PatientsListActivity"
            android:label="@string/title_activity_patients_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProblemsListActivity"
            android:label="@string/title_activity_problems_list_caretaker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".viewProblemActivity"
            android:label="@string/title_activity_view_problem_caretaker"
            android:parentActivityName=".ProblemsListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.meditrack.ProblemsListActivity" />
        </activity>
        <activity
            android:name=".viewRecordActivity"
            android:label="@string/title_activity_view_record_caretaker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileInformationActivity"
            android:label="@string/title_activity_profile_information"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".createRecord1"
            android:label="@string/title_activity_create_record1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".createRecordBody"
            android:label="@string/title_activity_create_record_body"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".searchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>